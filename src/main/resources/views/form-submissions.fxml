<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Pagination?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<BorderPane prefHeight="412.0" prefWidth="853.0" xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.civipol.civilio.controller.SubmissionsController">
    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="42.0" prefWidth="692.0" spacing="10.0">
            <padding>
                <Insets left="15.0" right="15.0"/>
            </padding>
            <Label fx:id="lblTitle" styleClass="form-title" text="%fosa.submissions.title"/>
            <Region prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS"/>
            <Button contentDisplay="GRAPHIC_ONLY" layoutX="820.0" layoutY="19.0" mnemonicParsing="false"
                    onAction="#onRefreshButtonClicked" text="%fosa.add_submission">
                <graphic>
                    <FontIcon iconLiteral="fth-refresh-cw"/>
                </graphic>
                <tooltip>
                    <Tooltip text="%fosa.add_submission"/>
                </tooltip>
                <cursor>
                    <Cursor fx:constant="HAND"/>
                </cursor>
            </Button>
            <ComboBox fx:id="cbFormType">
                <tooltip>
                    <Tooltip text="%fosa.submissions.form_type.prompt_text"/>
                </tooltip>
            </ComboBox>
            <Button fx:id="btnOpenSubmissionForm" contentDisplay="GRAPHIC_ONLY" layoutX="577.0" layoutY="19.0"
                    mnemonicParsing="false" onAction="#onAddSubmissionButtonClicked"
                    text="%fosa.add_submission">
                <graphic>
                    <FontIcon iconLiteral="fth-plus"/>
                </graphic>
                <tooltip>
                    <Tooltip text="%fosa.add_submission"/>
                </tooltip>
                <cursor>
                    <Cursor fx:constant="HAND"/>
                </cursor>
            </Button>
        </HBox>
    </top>
    <center>
        <VBox spacing="5.0" BorderPane.alignment="CENTER">
            <HBox>
                <padding>
                    <Insets left="10.0" right="10.0"/>
                </padding>
                <TextField fx:id="tfFilter" prefHeight="25.0" prefWidth="372.0"
                           promptText="%submissions.filter.prompt"/>
            </HBox>
            <StackPane fx:id="spTableContainer" VBox.vgrow="ALWAYS">
                <padding>
                    <Insets left="10.0" right="10.0"/>
                </padding>
                <TableView fx:id="tvSubmissions" prefHeight="200.0" prefWidth="200.0">
                    <columns>
                        <TableColumn fx:id="tcValidated" prefWidth="104.0" text="%fosa.columns.validated"/>
                        <TableColumn fx:id="tcFacilityName" prefWidth="452.13671875"
                                     text="%submissions.columns.facility_name"/>
                        <TableColumn fx:id="tcValidationCode" prefWidth="200"
                                     text="%fosa.columns.validation_code"/>
                        <TableColumn fx:id="tcIndex" prefWidth="126.0" text="%submissions.columns.index"/>
                        <TableColumn fx:id="tcRecordedOn" editable="false" prefWidth="182.0"
                                     text="%fosa.columns.recorded_on"/>
                    </columns>
                </TableView>
            </StackPane>
        </VBox>
    </center>
    <bottom>
        <HBox alignment="CENTER_LEFT" prefHeight="51.0" prefWidth="692.0"
              BorderPane.alignment="CENTER">
            <padding>
                <Insets left="15.0" right="15.0"/>
            </padding>
            <Region prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS"/>
            <Pagination fx:id="pgPagination" maxPageIndicatorCount="5" pageCount="1" prefHeight="33.0"
                        prefWidth="157.0"/>
        </HBox>
    </bottom>
</BorderPane>
