<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.civipol.civilio.controller.csc.CSCSubmissionsController">

    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="42.0" prefWidth="692.0" spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <Label styleClass="submissions-title" text="%csc.submissions.title" />
                <Region prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                <Button mnemonicParsing="false" onAction="#onAddSubmissionButtonClicked" styleClass="outlined-button" text="%csc.add_submission" />
            </children>
            <padding>
                <Insets left="15.0" right="15.0" />
            </padding></HBox>
    </top>
    <center>
        <TableView fx:id="tvSubmissions" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="tcSubmitted" editable="false" prefWidth="104.0" text="%csc.columns.submitted" />
                <TableColumn fx:id="tcRecordedAt" editable="false" prefWidth="106.0" text="%csc.columns.recorded_at" />
                <TableColumn fx:id="tcLastUpdatedBy" editable="false" prefWidth="149.0" text="%csc.columns.last_updated_by" />
                <TableColumn fx:id="tcLastUpdatedAt" editable="false" prefWidth="210.0" text="%csc.columns.last_updated_at" />
                <TableColumn fx:id="tcActions" editable="false" prefWidth="108.0" />
            </columns>
        </TableView>
    </center>

</BorderPane>
