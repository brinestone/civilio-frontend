<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.BorderPane?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<BorderPane prefHeight="611.0" prefWidth="1059.0" stylesheets="@../../styles/forms/fosa.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.civipol.civilio.controller.fosa.FOSAFormController">
    <center>
        <TabPane prefHeight="439.0" prefWidth="775.0">
            <Tab fx:id="tRespondant" closable="false" text="%fosa.form.sections.respondent.title">
                <ScrollPane fx:id="spRespondentContainer" fitToWidth="true" prefHeight="200.0" prefWidth="200.0" />
            </Tab>
            <Tab fx:id="tIdentification" closable="false" text="%fosa.form.sections.structure_identification.title">
                <ScrollPane fx:id="spStructureIdContainer" fitToWidth="true" prefHeight="200.0" prefWidth="200.0" />
            </Tab>
            <Tab fx:id="tEvents" closable="false" text="%fosa.form.sections.reg_cs_events.title">
                <ScrollPane fx:id="spCSERegContainer" fitToWidth="true" prefHeight="200.0" prefWidth="200.0" />
            </Tab>
            <Tab fx:id="tInfrastructure" closable="false" text="%fosa.form.sections.infra_eq.title">
                <ScrollPane fx:id="spEquipmentContainer" fitToWidth="true" prefHeight="200.0" prefWidth="200.0" />
            </Tab>
            <Tab fx:id="tPersonnel" closable="false" text="%fosa.form.sections.personnel_status.title">
                <ScrollPane fx:id="spPersonalStatusContainer" fitToWidth="true" prefHeight="200.0" prefWidth="200.0" />
            </Tab>
        </TabPane>
    </center>
    <bottom>
        <ButtonBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <buttons>
                <Button fx:id="btnFinish" defaultButton="true" mnemonicParsing="false" onAction="#onSubmitButtonClicked" text="%fosa.form.finish">
               <graphic>
                  <FontIcon iconLiteral="fth-save" />
               </graphic></Button>
                <Button fx:id="btnDiscard" cancelButton="true" mnemonicParsing="false" onAction="#onDiscardButtonClicked" text="%fosa.form.discard">
               <graphic>
                  <FontIcon iconLiteral="fth-trash-2" />
               </graphic></Button>
            </buttons>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </ButtonBar>
    </bottom>
</BorderPane>
