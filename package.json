{
  "name": "civilio",
  "version": "0.0.0",
  "main": "dist/index.js",
  "scripts": {
    "ng": "ng",
    "start:ng": "ng serve",
    "build:ng": "ng build",
    "wait-on:ng": "wait-on http://localhost:4200",
    "dev": "concurrently \"pnpm build:electron\" \"pnpm start:ng\" \"pnpm wait-on:ng && pnpm start:electron\"",
    "start:electron": "electron-forge start",
    "build:electron": "tsc --project projects/electron/tsconfig.json",
    "package:electron": "pnpm build:electron && pnpm build:ng && electron-forge package",
    "watch": "ng build --watch --configuration development",
    "test": "ng test"
  },
  "prettier": {
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^20.1.0",
    "@angular/compiler": "^20.1.0",
    "@angular/core": "^20.1.0",
    "@angular/forms": "^20.1.0",
    "@angular/platform-browser": "^20.1.0",
    "@angular/router": "^20.1.0",
    "electron-squirrel-startup": "^1.0.1",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular/build": "^20.1.3",
    "@angular/cli": "^20.1.3",
    "@angular/compiler-cli": "^20.1.0",
    "@electron-forge/cli": "^7.9.0",
    "@electron-forge/maker-deb": "^7.9.0",
    "@electron-forge/maker-rpm": "^7.9.0",
    "@electron-forge/maker-squirrel": "^7.9.0",
    "@electron-forge/maker-zip": "^7.9.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.9.0",
    "@types/jasmine": "~5.1.0",
    "electron": "^38.1.0",
    "jasmine-core": "~5.8.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "typescript": "~5.8.2"
  }
}
