{
  "name": "civilio",
  "version": "0.0.0",
  "productName": "civilio",
  "displayName": "CivilIO",
  "description": "A Civil Status data management tool.",
  "main": "./dist/electron/index.js",
  "scripts": {
    "ng": "ng",
    "start:ng": "ng serve",
    "build:ng": "ng build --output-path ./dist/angular --configuration production",
    "wait-on:ng": "wait-on http://localhost:4200",
    "predev": "pnpm clean",
    "dev": "concurrently -n \"angular-dev,electron\" \"pnpm start:ng\" \"nodemon\"",
    "start:electron": "electron-forge start",
    "build:electron": "pnpm build:electron:webpack",
    "build:electron:webpack": "webpack --config webpack.main.config.js && webpack --config webpack.preload.config.js",
    "make:electron": "pnpm clean && pnpm build:ng && pnpm build:electron && wait-on dist/electron/index.js dist/electron/preload.js && electron-forge make",
    "clean": "pnpm exec rimraf dist out",
    "package:electron": "pnpm clean && pnpm build:ng && pnpm build:electron && wait-on dist/electron/index.js dist/electron/preload.js && electron-forge package",
    "watch": "ng build --watch --configuration development",
    "migrate.local": "pnpm drizzle-kit generate && pnpm drizzle-kit migrate",
    "drop.local": "pnpm drizzle-kit drop",
    "studio": "pnpm drizzle-kit studio",
    "prepublish:electron": "pnpm clean && pnpm build:electron && pnpm build:ng && electron-forge publish",
    "publish:electron": "",
    "generate:page": "ng g c --project civilio --type page",
    "generate:layout": "ng g c --project civilio --type layout",
    "generate:component": "ng g c --project civilio --type component",
    "verify:electron": "node -e \"const fs = require('fs'); const path = require('path'); const mainFile = path.join(__dirname, 'dist', 'electron', 'index.js'); if (!fs.existsSync(mainFile)) { console.error('ERROR: Main entry point not found at:', mainFile); process.exit(1); } else { console.log('âœ“ Main entry point found at:', mainFile); }\"",
    "test": "ng test"
  },
  "prettier": {
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/cdk": "^20.2.3",
    "@angular/common": "^20.1.0",
    "@angular/compiler": "^20.1.0",
    "@angular/core": "^20.1.0",
    "@angular/forms": "^20.1.0",
    "@angular/platform-browser": "^20.1.0",
    "@angular/router": "^20.1.0",
    "@ng-icons/core": "^32.1.0",
    "@ng-icons/lucide": "^32.1.0",
    "@ngx-translate/core": "^17.0.0",
    "@ngxs/form-plugin": "^20.1.0",
    "@ngxs/logger-plugin": "^20.1.0",
    "@ngxs/router-plugin": "^20.1.0",
    "@ngxs/store": "^20.1.0",
    "@spartan-ng/brain": "0.0.1-alpha.511",
    "@tanstack/angular-table": "^8.21.3",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "drizzle-orm": "^0.44.5",
    "electron-squirrel-startup": "^1.0.1",
    "electron-store": "^10.1.0",
    "embla-carousel-angular": ">=19.0.0",
    "lodash": "^4.17.21",
    "ngx-sonner": ">=3.0.0",
    "ngxtension": "^6.0.0",
    "pg": "^8.16.3",
    "preferences": "^2.0.2",
    "rxjs": "~7.8.0",
    "tailwind-merge": "^2.5.2",
    "tslib": "^2.3.0",
    "yaml": "^2.8.1",
    "zod": "^4.1.8"
  },
  "devDependencies": {
    "@angular/build": "^20.1.3",
    "@angular/cli": "^20.1.3",
    "@angular/compiler-cli": "^20.1.0",
    "@electron-forge/cli": "^7.9.0",
    "@electron-forge/maker-deb": "^7.9.0",
    "@electron-forge/maker-rpm": "^7.9.0",
    "@electron-forge/maker-squirrel": "^7.9.0",
    "@electron-forge/maker-zip": "^7.9.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.9.0",
    "@electron-forge/publisher-github": "^7.9.0",
    "@spartan-ng/cli": "0.0.1-alpha.511",
    "@tailwindcss/postcss": "^4.1.13",
    "@types/jasmine": "~5.1.0",
    "@types/lodash": "^4.17.20",
    "@types/node": "^24.4.0",
    "@types/pg": "^8.15.5",
    "concurrently": "^9.2.1",
    "copy-webpack-plugin": "^13.0.1",
    "drizzle-kit": "^0.31.4",
    "electron": "^38.1.0",
    "jasmine-core": "~5.8.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "ngxtension-plugin": "^6.0.0",
    "nodemon": "^3.1.10",
    "postcss": "^8.5.6",
    "rimraf": "^6.0.1",
    "tailwindcss": "^4.1.13",
    "tailwindcss-animate": "^1.0.6",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "typescript": "~5.8.2",
    "wait-on": "^8.0.5",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1"
  },
  "author": {
    "name": "Brinestone Solutions",
    "url": "https://github.com/brinestone"
  }
}
