{
  "name": "civilio",
  "version": "0.0.0",
  "productName": "civilio",
  "displayName": "CivilIO",
  "description": "A Civil Status data management tool.",
  "main": "dist/index.js",
  "scripts": {
    "ng": "ng",
    "start:ng": "ng serve",
    "build:ng": "ng build",
    "wait-on:ng": "wait-on http://localhost:4200",
    "dev": "concurrently \"pnpm build:electron\" \"pnpm start:ng\" \"pnpm wait-on:ng && pnpm start:electron\"",
    "start:electron": "electron-forge start",
    "build:electron": "tsc --project projects/electron/tsconfig.json",
    "premake:electron": "pnpm package:electron",
    "make:electron": "electron-forge make",
    "prepackage:electron": "pnpm exec rimraf dist out",
    "package:electron": "pnpm build:electron && pnpm build:ng && electron-forge package",
    "watch": "ng build --watch --configuration development",
    "migrate.local": "pnpm drizzle-kit generate --config projects/electron/drizzle.config.ts && pnpm drizzle-kit migrate",
    "test": "ng test"
  },
  "prettier": {
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/cdk": "^20.2.3",
    "@angular/common": "^20.1.0",
    "@angular/compiler": "^20.1.0",
    "@angular/core": "^20.1.0",
    "@angular/forms": "^20.1.0",
    "@angular/platform-browser": "^20.1.0",
    "@angular/router": "^20.1.0",
    "@spartan-ng/brain": "0.0.1-alpha.511",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.44.5",
    "electron-squirrel-startup": "^1.0.1",
    "pg": "^8.16.3",
    "rxjs": "~7.8.0",
    "tailwind-merge": "^2.2.0",
    "tslib": "^2.3.0",
    "zod": "^4.1.8"
  },
  "devDependencies": {
    "@angular/build": "^20.1.3",
    "@angular/cli": "^20.1.3",
    "@angular/compiler-cli": "^20.1.0",
    "@electron-forge/cli": "^7.9.0",
    "@electron-forge/maker-deb": "^7.9.0",
    "@electron-forge/maker-rpm": "^7.9.0",
    "@electron-forge/maker-squirrel": "^7.9.0",
    "@electron-forge/maker-zip": "^7.9.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.9.0",
    "@electron-forge/publisher-github": "^7.9.0",
    "@spartan-ng/cli": "0.0.1-alpha.511",
    "@tailwindcss/postcss": "^4.1.13",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^24.4.0",
    "concurrently": "^9.2.1",
    "drizzle-kit": "^0.31.4",
    "electron": "^38.1.0",
    "jasmine-core": "~5.8.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "postcss": "^8.5.6",
    "rimraf": "^6.0.1",
    "tailwindcss": "^4.1.13",
    "tailwindcss-animate": "^1.0.6",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "typescript": "~5.8.2",
    "wait-on": "^8.0.5"
  },
  "author": {
    "name": "Brinestone Solutions",
    "url": "https://github.com/brinestone"
  }
}
