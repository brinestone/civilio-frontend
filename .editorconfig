# Editor configuration, see https://editorconfig.org lucideLoader
root = true

[*]
charset = utf-8
indent_style = tab
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.{js,ts,jsx,tsx}]
quote_type = single
ij_typescript_use_double_quotes = false
ij_typescript_spaces_within_imports = true
ij_typescript_spaces_within_object_literal_braces = true
ij_angular-html_spaces_within_interpolation_expressions = true
max_line_length=80


[*.md]
max_line_length = off
trim_trailing_whitespace = false
